{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "declaration": false,
        "erasableSyntaxOnly": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "outDir": "bin",
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
